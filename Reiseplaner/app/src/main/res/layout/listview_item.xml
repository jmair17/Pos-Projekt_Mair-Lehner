<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/listItem_trip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name der Reise"
                        android:textColor="#E4E4E4"
                        android:textSize="32dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/listItem_trip_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reiseziel"
                        android:textColor="#838383"
                        android:textSize="24dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/listItem_trip_daysLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reise in..."
                        android:textColor="#474747"
                        android:textSize="22dp"
                        android:textStyle="bold|italic" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/listItem_destinationTemperatur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="15Â°"
                        android:textColor="#FFFFFF"
                        android:textSize="45"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>